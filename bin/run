#!/usr/bin/env node

const fs = require('fs')
const path = require('path')
const project = path.join(__dirname, '../tsconfig.json')
const exists = fs.existsSync(project)
const dev = exists && process.env.NODE_ENV !== 'production'

if (dev) {
  require('ts-node').register({project})
}

require(`../${dev ? 'src' : 'lib'}`)